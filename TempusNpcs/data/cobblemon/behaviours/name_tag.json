{
  "name": "Display Name Tag",
  "description": "Toggles the display of the name tag for the NPC.",
  "entityType": "cobblemon:npc",
  "undo": [
  ],
  "configurations": [
    {
      "type": "custom_script",
      "variables": [
        {
          "variableName": "display_name_tag",
          "displayName": "Display Name Tag",
          "description": "Toggle the name tag display true or false",
