{
    "initializationAction": [
        "q.player.data.e4_champion_defeated ? q.dialogue.set_page('post_defeat');"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                {
                    "type": "expression",
                    "expression": "'Hey there trainer! My name is ' + q.npc.name + ' are you ready to battle?';"
                }
            ],
            "input": "q.dialogue.set_page('battle_prompt');"
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "So, what do you say? Would you like to challenge me to a battle? I'll only accept after you defeat my students!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "isSelectable": "q.player.data.e4_steel_fairy_defeated",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "I hope you're ready for a challenge!"
            ],
            "escapeAction": "0",
            "input": [
                "q.dialogue.close();",
                "v.battle = q.npc.start_battle(q.player);"
            ]
        },
        {
            "id": "post_defeat",
            "speaker": "npc",
            "lines": [
                "That wasn't half bad! You're a pretty good trainer, you know that?"
            ],
            "input": "q.dialogue.close();"
        }
    ]
}