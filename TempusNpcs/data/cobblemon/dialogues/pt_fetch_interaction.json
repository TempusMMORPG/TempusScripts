{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                {
                    "type": "expression",
                    "expression": "'Hey there trainer! Could you by chance find me a ' + q.npc.config.fetch_requested_display + '? I will reward you well!';"
                }
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "isSelectable": "q.player.party.count_by_properties(q.npc.config.fetch_requested) >= 1",
                        "action": "q.dialogue.set_page('confirmation');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('okbye');"
                    }
                ]
            }
        },
        {
            "id": "confirmation",
            "speaker": "npc",
            "lines": [
                {
                    "type": "expression",
                    "expression": "'Are you SURE you want to give your §6§l' + q.npc.config.fetch_requested_display + '§r away?';"
                }
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§b🎁 Give 🎁§r",
                        "value": "give",
                        "isSelectable": "q.player.party.count_by_properties(q.npc.config.fetch_requested) >= 1",
                        "action": [
                            "q.run_script('pt_fetch_pkmn');",
                            "q.dialogue.close();"
                        ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('okbye');"
                    }
                ]
            }
        },
        {
            "id": "okbye",
            "speaker": "npc",
            "lines": [
                "Alright, see you later!"
            ],
            "input": "q.dialogue.close();"
        }
    ]
}