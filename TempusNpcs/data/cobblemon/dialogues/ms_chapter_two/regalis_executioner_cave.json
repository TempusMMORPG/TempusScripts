{
    "initializationAction": [
        "q.player.data.regalis_executioner_cave_defeated || q.player.data.dialogue.dan == false ? q.dialogue.set_page('post_defeat');",
        "q.player.data.regalis_grunt_2b_1_defeated == false || q.player.data.regalis_grunt_2b_2_defeated == false || q.player.data.regalis_grunt_2b_3_defeated == false || q.player.data.regalis_grunt_2b_4_defeated == false || q.player.data.regalis_grunt_2b_5_defeated == false ? q.dialogue.set_page('post_defeat');"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": ["You're too late! We've got the key! You won't find it here."],
            "input": "q.dialogue.set_page('battle_prompt');"
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "Now beg for mercy as I destroy you!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "isSelectable": "q.player.data.regalis_executioner_cave_defeated == false",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "Very pitiful! You think you can win?"
            ],
            "escapeAction": "0",
            "input": [
                "q.dialogue.close();",
                "v.battle = q.npc.start_battle(q.player);"
            ]
        },
        {
            "id": "post_defeat",
            "speaker": "npc",
            "lines": [
                "..."
            ],
            "input": "q.dialogue.close();"
        }
    ]
}