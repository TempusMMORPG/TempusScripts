{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Hey there trainer! Would you like to trade your Bidoof for a Pikachu?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "isSelectable": "q.player.party.count_by_properties('bidoof') >= 1",
                        "action": "q.dialogue.set_page('confirmation');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('okbye');"
                    }
                ]
            }
        },
        {
            "id": "confirmation",
            "speaker": "npc",
            "lines": [
                "Are you sure you want to trade?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Yes",
                        "value": "yes",
                        "isSelectable": "q.player.party.count_by_properties('bidoof') >= 1",
                        "action": [
                            "q.run_script('trade_pikachu');",
                            "q.dialogue.close();"
                        ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.set_page('okbye');"
                    }
                ]
            }
        },
        {
            "id": "okbye",
            "speaker": "npc",
            "lines": [
                "Alright, see you later!"
            ],
            "input": "q.dialogue.close();"
        }
    ]
}