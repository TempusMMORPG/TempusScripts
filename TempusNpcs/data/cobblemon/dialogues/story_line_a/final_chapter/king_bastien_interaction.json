{
 "initializationAction": [
        "q.player.data.king_bastien_defeated ? q.dialogue.set_page('post_defeat');"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();",
            "gibber": {
                "interval": 0.1
            }
        },
        "player": {
            "face": "q.player.face();",
            "gibber": {
                "interval": 0.1
            },
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                {
                    "type": "expression",
                    "expression": "'Hey there trainer! I am ' + q.npc.name + ' are you ready to battle?';"
                }
            ],
            "input": "q.dialogue.set_page('battle_prompt');"
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "So, what do you say? Would you like to challenge me to a battle?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "That's what I like to see! Now, show me what you got, Trainer!"
            ],
            "escapeAction": "0",
            "input": [
                "q.dialogue.close();",
                "v.battle = q.npc.start_battle(q.player);"
            ]
        },
        {
            "id": "post_defeat",
            "speaker": "npc",
            "lines": [
                "So close to infinite power..."
            ],
            "input": "q.dialogue.close();"
        }
    ]
}