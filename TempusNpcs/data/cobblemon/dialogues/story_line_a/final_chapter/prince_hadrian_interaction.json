{
"initializationAction": [
        "q.player.data.prince_hadrian_defeated ? q.dialogue.set_page('post_defeat');"
    ],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();",
            "gibber": {
                "interval": 0.1
            }
        },
        "player": {
            "face": "q.player.face();",
            "gibber": {
                "interval": 0.1
            },
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "I am not one to converse with others, espeically enemies. Let us battle."
            ],
            "escapeAction": "0",
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": "q.dialogue.set_page('battle_start');"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "You shall fall at my hand."
            ],
            "escapeAction": "0",
            "input": [
                "q.dialogue.close();",
                "v.battle = q.npc.start_battle(q.player);"
            ]
        },
        {
            "id": "post_defeat",
            "speaker": "npc",
            "lines": [
                "Leave me."
            ],
            "input": "q.dialogue.close();"
        }
    ]
}