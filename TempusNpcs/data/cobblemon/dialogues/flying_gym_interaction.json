{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Hello, and welcome to the Unity City Flying Gym."
            ],
            "input": "q.dialogue.set_page('accept_teleport');"
        },
        {
            "id": "accept_teleport",
            "speaker": "npc",
            "lines": [
                "Would you like to challenge the Flying Gym?"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Battle",
                        "value": "battle",
                        "isSelectable": "q.player.get_npc_variable(q.npc, 'battleable')",
                        "action": [
                          "q.dialogue.close();",
                          "v.battle = q.npc.start_battle(q.player);"
                        ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [
                            "q.dialogue.close();"
                        ]
                    },
                    {
                        "text": "Reset",
                        "value": "reset",
                        "action": [
                            "q.run_script('cobblemon:gs_gym_leader_clear_battleable');",
                            "q.dialogue.close();"
                        ]
                    },
                    {
                        "text": "Info",
                        "value": "information",
                        "action": "q.dialogue.set_page('info');"
                    }
                ]
            }
        },
        {
            "id": "okbye",
            "speaker": "npc",
            "lines": [
                "Alright, see you later!"
            ],
            "input": "q.dialogue.close();"
        },
        {
            "id": "info",
            "speaker": "npc",
            "lines": [
                {
                "type": "expression",
                "expression": "q.player.get_npc_variable(q.npc, 'battleable');"
                }
            ],
            "input": "q.dialogue.close();"
        }
    ]
}